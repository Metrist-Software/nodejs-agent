{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "rootDir": "src",
    "declaration": true,
    "outDir": "build",
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "types": [
      "node"
    ]
  },
  "exclude": [
    "__tests__/**",
    "build",
    "example"
  ]
}
